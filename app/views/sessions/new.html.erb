<%= form_tag sessions_path do %>
<form>
<h1>Sign In</h1>
    <div class="form-group">
        <div class="col-md-6">
        <%= text_field_tag :email, params[:email], placeholder: "Email", class: "form-control"%>
        </div>
    </div>
    <div class="form-group">
        <div class="col-md-6">
        <%= password_field_tag :password, nil, placeholder: "Password", class: "form-control" %>
        </div>
    </div>
    <div class="form-row">
        <div class="col-md-2">
        <%= submit_tag 'Log in', class: 'btn btn-primary form-control' %>
        </div>
        <div class="col-md-2">
        <%= link_to "Sign Up", new_user_path, class: 'btn btn-primary form-control' %>
        </div>
    </div>
</form>
<% end %>
